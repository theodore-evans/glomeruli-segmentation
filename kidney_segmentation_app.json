{
    "$schema": "./ead-app-schema-draft-1.json",
    "name": "HuBMAP Kidney Segmentation App",
    "namespace": "org.empaia.empaia.hubmap-hacking-kidney.v1",
    "description": "Kidney segmentation algorithm for detection and counting of glomeruli in kidney WSI data",
    "inputs": {
        "kidney_wsi": {
            "type": "wsi"
        },
        "my_rectangle": {
            "type": "rectangle"
        }
    },
    "outputs": {
        "glomerulus_count": {
            "type": "integer",
            "reference": "inputs.my_rectangle"
        },
        "glomeruli_polygons": {
            "type": "collection",
            "reference": "inputs.my_rectangle",
            "items": {
                "type": "polygon",
                "reference": "inputs.kidney_wsi"
            }
        }
    }
}